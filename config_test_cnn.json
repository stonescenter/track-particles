{
    "paths": {
        "save_dir": "results",
        "log_dir": "logs"
    },
    "data": {
        "filename": "/data/track-ml/eramia/10hits_without_etaphi_filter_pt_less_1.csv",
        "train_split": 0.80,
        "normalise": true,
        "cylindrical": true,
        "num_hits": 10        
    },
    "training": {
        "epochs": 12,
        "batch_size": 18,
        "save_model": true,
        "load_model": false,
        "use_gpu": true        
    },
    "model": {
        "name": "cnn",
        "loss": "mse",
        "optimizer": "adam",
        "layers": [
            {
                "type": "cnn",
                "filters": 64,
                "kernel_size": 2,
                "activation": "relu",
                "input_timesteps": 4,
                "input_features": 3
            },
            {
                "type": "maxpooling",
                "pool_size": 2
            },
            {
                "type": "flatten"
            }, 
            {
                "type": "dense",
                "neurons": 30,
                "activation": "relu"
            },              
            {
                "type": "dense",
                "neurons": 3,
                "activation": "linear"
            }
        ]
    }
}
